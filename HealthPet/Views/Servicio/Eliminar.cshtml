@model ServicioModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
  <div class="card-header">
    Eliminar Servicio
  </div>
  <div class="card-body">
   
      <form asp-action= "Eliminar" asp-controlller="Servicio" method = "post">

          <input asp-for="CodServicio" type="hidden" class="form-control" />   
          
          <div class= "alert alert-danger" role= "alert">
              ¿Desea eliminar el Servicio : @Html.DisplayTextFor(m => m.NombreServicio) ?
          </div>

      <button type="submit" class="btn btn-danger">Eliminar</button>
      <a asp-action= "Listar" asp-controller="Servicio" class="btn btn-warning">Volver a la lista</a>
    </form>

  </div>
</div>